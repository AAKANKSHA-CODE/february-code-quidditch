#include<bits/stdc++.h>
using namespace std;
int main()
{
    string str;
    int n,k,i;
    cin>>n>>k;
    cin>>str;
    for(i=0;i<k;i++)
    {
        if(i==0)
        str[i]='1';
        else if(str[i]=='0')
        {
        k=k+1;
        continue;
        }
        else
        str[i]='0';
    }
    cout<<str;
    
}
